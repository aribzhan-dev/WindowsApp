<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:HelloAvalonia"
        x:Class="HelloAvalonia.MainWindow"
        Width="520" Height="680"
        Background="#FAFAFA"
        Title="My Tasks">

    <Window.Resources>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </Window.Resources>

    <Grid Margin="20,30,20,20" RowDefinitions="Auto,Auto,*,Auto">

        <!-- Sarlavha -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,40">
            <TextBlock Text="My Tasks" FontSize="32" FontWeight="Bold" Foreground="Black"/>
            <TextBlock Text="Stay organized and productive" FontSize="14" Foreground="#666666" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Input + Delete tugmasi -->
        <Border Grid.Row="1" Background="White" CornerRadius="30" Padding="20" Margin="0,0,0,30"
                BoxShadow="0 10 40 0 #22000000">
            <StackPanel Spacing="20">

                <!-- Yangi vazifa qo'shish -->
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox x:Name="txtTaskInput"
                             Watermark="Add new task..."
                             FontSize="16"
                             Padding="30,18"
                             Background="#F5F5F5"
                             BorderThickness="0"
                             CornerRadius="30"/>
                    <Button Grid.Column="1" Content="+" 
                            Width="64" Height="64"
                            Background="#2196F3" Foreground="White"
                            FontSize="34" FontWeight="Bold"
                            CornerRadius="32"
                            Click="btnAdd_Click"/>
                </Grid>

                <!-- Delete Completed Tasks (to'g'ri Button ichida!) -->
                <Button Background="#FFEBEE" CornerRadius="30" Padding="30,16" Click="btnRemove_Click">
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ—‘ï¸" FontSize="22"/>
                        <TextBlock Text="Delete Completed Tasks" 
                                   Foreground="#E91E63" FontWeight="SemiBold" FontSize="15"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Vazifalar ro'yxati -->
        <ScrollViewer Grid.Row="2">
            <ItemsControl x:Name="lstTasks" Margin="0,0,0,20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Bitta Border ichida hamma narsa -->
                        <Border Background="White" 
                                CornerRadius="30" 
                                Margin="0,12" 
                                Padding="24,20"
                                BoxShadow="0 8 30 0 #1F000000">
                            <Grid ColumnDefinitions="Auto,*">
                                <!-- Status badge + checkbox ichida -->
                                <Border Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                        CornerRadius="30" 
                                        Padding="20,14" 
                                        Margin="0,0,24,0">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <CheckBox IsChecked="{Binding IsChecked}" 
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Status}"
                                                   Foreground="White" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Vazifa matni + #ID -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Text}" FontSize="17" Foreground="#212121"/>
                                    <TextBlock Text="{Binding Id, StringFormat='#{0}'}"
                                               Foreground="#999999" FontSize="13" Margin="0,6,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Statistika -->
        <TextBlock x:Name="StatsText" Grid.Row="3"
                   Text="0 of 0 tasks completed"
                   Foreground="#666666" FontSize="15" HorizontalAlignment="Center"/>
    </Grid>
</Window>