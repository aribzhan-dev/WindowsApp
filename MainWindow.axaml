<!-- Practic task  -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HelloAvalonia.MainWindow"
        Width="500" Height="400"
        Title="Tasks App">

    <TabControl x:Name="MainTabs">
        <TabItem Header="Главная">
            <StackPanel Margin="10">
                <Label Content="Это главная вкладка"/>
                <Button Content="Перейти в Настройки"
                        Click="GotoSettings_Click"
                        Width="200"/>
            </StackPanel>
        </TabItem>

        <TabItem Header="Настройки">
            <StackPanel Margin="10" Spacing="10">
                <CheckBox x:Name="EnableBox"
                          Content="Разрешить ввод"
                          IsChecked="True"
                          Checked="EnableBox_Changed"
                          Unchecked="EnableBox_Changed"/>
                <TextBox x:Name="SettingsText"
                         Watermark="Введите текст..."/>
            </StackPanel>
        </TabItem>

        <TabItem Header="Справка">
            <Grid>
                <Border Background="#E0E0E0"
                        Height="60"
                        VerticalAlignment="Top"
                        Padding="10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Label x:Name="PanelLabel"
                               Content="Текст внутри панели"/>
                        <Button Content="Показать/Скрыть"
                                Click="ToggleLabel_Click"
                                HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</Window>



